{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Debug (docker)",

      "address": "0.0.0.0",
      "localRoot": "${workspaceFolder}",
      "port": 9229,
      "protocol": "inspector",
      "remoteRoot": "/usr/src/app",
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Debug (jest)",

      "localRoot": "${workspaceFolder}",
      "port": 9229,
      "protocol": "inspector",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
